<Window x:Class="app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
            
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Content="Document"></Label>

        <ListBox x:Name="lbxDocuments" Grid.Row="1" Margin="10" SelectionChanged="lbxDocuments_SelectionChanged" DisplayMemberPath="Title"></ListBox>

        <Button x:Name="btnAdd"  Content="Add" Width="75" Click="btnAdd_Click"/>
        <Button x:Name="btnDelete" Grid.Column="1" Grid.Row="1" Content="Delete" Width="50" Height="30" Click="btnDelete_Click" />




    </Grid>
</Window>
