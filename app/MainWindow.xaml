<Window x:Class="app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"  WindowState="Maximized" >

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Border  Grid.Column="0" BorderThickness="1" Margin="10">
        
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Image   HorizontalAlignment="Center"  Source="/Images/bookstack_libr_3024.ico" Width="55" Height="53" Margin="10,0,0,0" />


                <Label  Content="Document" FontSize="35" FontWeight="Bold"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" />
            </StackPanel>
        </Border>




        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="10">

            <ListBox x:Name="lbxDocuments"  Margin="10" DisplayMemberPath="Title" MouseDoubleClick="lbxDocuments_MouseDoubleClick"/>
        </Border>
        <Button x:Name="btnAdd" Grid.Column="1" Grid.Row="1" Content="Create New Document" Width="200" Click="btnAdd_Click" Height="30" Margin="0,0,0,103" HorizontalAlignment="Center"/>
        <Button x:Name="btnDelete" Grid.Column="1" Grid.Row="1" Content="Delete" Width="200" Height="30" Click="btnDelete_Click" Margin="0,150,0,0" HorizontalAlignment="Center" />


        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBox x:Name="tbxSearch"  Margin="10" Width="200"   Style="{StaticResource MaterialDesignOutlinedTextBox}" VerticalAlignment="Center"/>

            <Button x:Name="btnSearch" Content="Search" Width="80" Height="30" Click="btnSearch_Click"></Button>


        </StackPanel>






    </Grid>
</Window>
