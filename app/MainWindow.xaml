<Window x:Class="app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
            
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Content="Document"></Label>

        <ListBox x:Name="lbxDocuments" Grid.Row="1" Margin="10" DisplayMemberPath="Title" MouseDoubleClick="lbxDocuments_MouseDoubleClick"/>

        <Button x:Name="btnAdd"  Content="Add" Width="75" Click="btnAdd_Click" Height="30"/>
        <Button x:Name="btnDelete" Grid.Column="1" Grid.Row="1" Content="Delete" Width="50" Height="30" Click="btnDelete_Click" />

        
        <TextBox x:Name="tbxSearch" Grid.Column="1" Margin="30" Width="200"  />
        <Button x:Name="btnSearch" Content="Search" Grid.Column="1" Width="50" Height="30" Margin="250,0,0,0" Click="btnSearch_Click"></Button>

      




    </Grid>
</Window>
