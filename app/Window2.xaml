<Window x:Class="app.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="20*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="tbxTitle" Text="" Grid.Row="0" Grid.Column="0" Width="120" Margin="20" ></TextBox>
            <TextBox x:Name="tbxDetails" Margin="20" Grid.Row="1" Grid.Column="0" ></TextBox>
            <Button x:Name="btnSave" Content="save" Grid.Column="1" Grid.Row="2" Click="btnSave_Click"></Button>
    </Grid>
</Window>
